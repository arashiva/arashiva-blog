---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="terminal-header">
			<span class="prompt">root@arashiva:~$</span>
			<h2>{SITE_TITLE}</h2>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">home</HeaderLink>
			<HeaderLink href="/blog">blog</HeaderLink>
			<HeaderLink href="/about">about</HeaderLink>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 2em 0;
		background: var(--bg);
		border-bottom: 1px solid var(--border);
	}
	
	nav {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 1em;
	}
	
	.terminal-header {
		display: flex;
		align-items: center;
		gap: 1em;
		margin-bottom: 1em;
	}
	
	.prompt {
		color: var(--accent);
		font-weight: 700;
	}
	
	h2 {
		margin: 0;
		font-size: 1.5em;
	}
	
	.internal-links {
		display: flex;
		gap: 1.5em;
	}
</style>